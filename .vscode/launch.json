// .vscode/launch.json
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/obj/main", // Ensure this path is correct
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build and Test",
            "miDebuggerPath": "/usr/bin/gdb", // Adjust this path if necessary
            "logging": {
                "engineLogging": true,
                "trace": true,
                "traceResponse": true
            }
        }
    ]
}
